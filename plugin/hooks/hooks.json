{
	"hooks": {
		"SessionStart": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "${CLAUDE_PLUGIN_ROOT}/scripts/ensure-binary.sh"
					},
					{
						"type": "command",
						"command": "${CLAUDE_PLUGIN_ROOT}/bin/claude-mem hook:context"
					}
				]
			}
		],
		"UserPromptSubmit": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "${CLAUDE_PLUGIN_ROOT}/bin/claude-mem hook:new"
					}
				]
			}
		],
		"PostToolUse": [
			{
				"matcher": "*",
				"hooks": [
					{
						"type": "command",
						"command": "${CLAUDE_PLUGIN_ROOT}/bin/claude-mem hook:save"
					}
				]
			}
		],
		"Stop": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "${CLAUDE_PLUGIN_ROOT}/bin/claude-mem hook:summary"
					}
				]
			}
		],
		"SessionEnd": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "${CLAUDE_PLUGIN_ROOT}/bin/claude-mem hook:cleanup"
					}
				]
			}
		]
	}
}
